<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_7591d5">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="19dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_server_bg"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/connect_server_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#5D4287"
        android:layout_marginTop="26dp"
        android:text="The connection time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_connect_server_bg"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="00:00:00"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@drawable/connect_time_text_color_selector"
        app:layout_constraintTop_toBottomOf="@id/tv_1"/>
    <View
        android:id="@+id/icon_bg"
        android:layout_width="69dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/home_server_icon_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_connect_time"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_home_server_icon"
        android:layout_width="62dp"
        android:layout_height="41dp"
        android:src="@drawable/fast2"
        app:layout_constraintTop_toTopOf="@id/icon_bg"
        app:layout_constraintLeft_toLeftOf="@id/icon_bg"
        app:layout_constraintRight_toRightOf="@id/icon_bg"
        app:layout_constraintBottom_toBottomOf="@id/icon_bg"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_btn"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/home_connect_btn_bg"
        app:layout_constraintBottom_toTopOf="@id/bottom_view"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_connect_text_status"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="21dp"
        android:src="@drawable/connect_text"
        app:layout_constraintLeft_toLeftOf="@id/iv_connect_btn"
        app:layout_constraintRight_toRightOf="@id/iv_connect_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_connect_btn"/>
    <include
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        layout="@layout/layout_home_ad0914"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>