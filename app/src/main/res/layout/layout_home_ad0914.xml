<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="224dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/nv_ad0914_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/bg_fff_8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/iv_ad0914_media"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/iv_ad0914_logo"/>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/iv_ad0914_logo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ad0914_install"
                android:layout_width="88dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="Install"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_2e2e2e_8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ad0914_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Boom Beach"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:textColor="#192340"
                android:layout_marginLeft="10dp"
                app:layout_constraintRight_toLeftOf="@id/iv_tag"
                app:layout_constraintTop_toTopOf="@id/iv_ad0914_logo"
                app:layout_constraintLeft_toRightOf="@id/iv_ad0914_logo"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_tag"
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/home_ad_tag"
                app:layout_constraintTop_toTopOf="@id/tv_ad0914_title"
                app:layout_constraintRight_toLeftOf="@id/tv_ad0914_install"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_id0914_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="#8A192340"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Start building your islaâ€¦"
                app:layout_constraintLeft_toRightOf="@id/iv_ad0914_logo"
                app:layout_constraintTop_toBottomOf="@id/tv_ad0914_title"
                app:layout_constraintRight_toLeftOf="@id/tv_ad0914_install"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_ad0914_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/home_cover"/>
</RelativeLayout>