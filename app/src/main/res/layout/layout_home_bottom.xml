<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="102dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/home_bottom"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_bottom_home_btn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/home_bottom_btn"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_bottom_connect"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/home_btn_selector"
        app:layout_constraintTop_toTopOf="@id/iv_bottom_home_btn"
        app:layout_constraintLeft_toLeftOf="@id/iv_bottom_home_btn"
        app:layout_constraintRight_toRightOf="@id/iv_bottom_home_btn"
        app:layout_constraintBottom_toBottomOf="@id/iv_bottom_home_btn"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_server"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_bottom_home_btn">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bottom_server"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home_server_selector"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llc_set"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_bottom_home_btn">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_bottom_set"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home_set_selector"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>